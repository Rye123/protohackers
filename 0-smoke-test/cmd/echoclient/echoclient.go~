package main

import (
	"fmt"
	"net"
)

func runClient() {
	addr := fmt.Sprintf("localhost:%d", SERVER_PORT)
	conn, err := net.Dial("tcp", addr)
	if err != nil {
		fmt.Printf("Error: %v", err)
	}
	defer conn.Close()

	conn.Write([]byte("Hello."))

	resp, err := recvMsg(conn)
	if err != nil {
		fmt.Printf("Error: %v", err)
	} else {
		fmt.Println(resp)
	}
}
